<Config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maja.fr ./MAJAAdminConfigSystem.xsd" xmlns="http://maja.fr">
    <!-- System : operational center name -->
    <System>MAJA</System>
    <!-- Setting tolerances in MAJA -->
    <Tolerances>
        <!-- For footprint matching between the L1, L2, L2Coarse and DEM -->
        <FootprintTolerances> 
            <!-- Use to set the ITK threshold "SetGlobalDefaultCoordinateTolerance" -->
            <Coordinate>0.000001</Coordinate>
            <!-- Use to set the ITK threshold "SetGlobalDefaultDirectionTolerance" -->
            <Direction>0.000001</Direction>
        </FootprintTolerances>
    </Tolerances>
    <DevelopmentConfiguration>
        <!-- Option to measure the performance of the chain (time processing and memory footprint) -->
        <EnablePerformanceMeasureAlgorithms>false</EnablePerformanceMeasureAlgorithms>
    </DevelopmentConfiguration>
</Config>
